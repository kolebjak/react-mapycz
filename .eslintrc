{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
        "plugin:react/recommended",
        "plugin:import/errors",
        "plugin:import/warnings",
        "eslint:recommended"
    ],
    "parser": "babel-eslint",
    "parserOptions": {
        "sourceType": "module",
        "ecmaFeatures": {
            "experimentalObjectRestSpread": true,
            "jsx": true,
            "modules": true
        }
    },
    "plugins": [
        "react",
        "import"
    ],
    "rules": {
        "react/default-props-match-prop-types": "error",
        "react/forbid-component-props": "error",
        "react/no-children-prop": "error",
        "react/no-direct-mutation-state": "error",
        "react/no-multi-comp": "warn",
        "react/prefer-es6-class": [
            "error",
            "always"
        ],

        "strict": 0,
        "comma-dangle": [
            "error",
            "always-multiline"
        ],
        "indent": [
            "error",
            "tab"
        ],
        "linebreak-style": [
            "error",
            "windows"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "object-curly-spacing": [
            "error",
            "never"
        ],
        "no-console": "warn",
        "no-debugger": "off",
        "no-unused-vars": "error",
        "no-undef": "off",
        "import/no-unresolved": [
            "error",
            {
                "ignore": [
                    "react-mapycz"
                ]
            }
        ]
    }
}